    <section class="bg-primary text-white py-16 md:py-24">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-extrabold mb-3">
                Aktuelle Immobilienangebote
            </h1>
            <p class="text-lg md:text-xl font-light text-secondary max-w-4xl mx-auto">
                Ob Eigentumswohnung, Mehrfamilienhaus oder Grundstück – wir vermarkten Immobilien mit maximaler Reichweite und Effizienz.
            </p>
        </div>
    </section>

    <section id="angebote" class="container mx-auto px-4 py-16">
        <div class="bg-white p-6 rounded-lg shadow-xl mb-10 border-t-4 border-accent">
            <h2 class="text-2xl font-bold mb-4 text-primary">Ihre Immobiliensuche</h2>
    
            <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
                <select class="p-3 border border-gray-300 rounded focus:border-primary focus:ring-primary">
                    <option>Kauf/Miete</option>
                    </select>
                <button class="bg-accent text-primary font-bold rounded hover:bg-primary hover:text-white transition duration-300">
                    <i class="fas fa-search mr-2"></i> Suchen
                </button>
            </div>
        </div>
    
        <h2 class="text-3xl font-bold mb-8 text-primary border-b-2 border-secondary pb-2">
            Aktuelle Objekte ({{ collections.immobilien | length }})
        </h2>
        
        {% if collections.immobilien %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    
            {% for post in collections.immobilien %}
            <div class="bg-white rounded-lg shadow-xl overflow-hidden">
                <a href="{{ post.url }}">
                    <img src="{{ post.data.hauptbild }}" alt="Hauptbild von {{ post.data.titel }}" class="w-full h-48 object-cover">
                </a>
                <div class="p-5">
                    <span class="inline-block bg-secondary text-primary text-xs font-semibold px-3 py-1 rounded-full mb-2">{{ post.data.status }}</span>
                    
                    <h3 class="text-xl font-bold text-primary mb-1">{{ post.data.titel }}, {{ post.data.ort }}</h3>
                    <p class="text-2xl font-extrabold text-accent mb-3">€ {{ post.data.preis }}</p>
                    
                    <div class="flex justify-between text-sm text-gray-600 mb-4 border-t pt-2">
                        <span><i class="fas fa-ruler-combined mr-1"></i> {{ post.data.eckdaten.flaeche }} m²</span>
                        <span><i class="fas fa-bed mr-1"></i> {{ post.data.eckdaten.zimmer }} Zi.</span>
                        <span><i class="fas fa-city mr-1"></i> PLZ</span>
                    </div>
                    
                    <a href="{{ post.url }}" class="block text-center bg-accent text-primary font-bold py-2 rounded-lg hover:bg-primary hover:text-white transition duration-300">
                        Mehr erfahren
                    </a>
                </div>
            </div>
            {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-lg text-gray-600 mt-10">Aktuell sind keine Immobilienangebote verfügbar. Bitte prüfen Sie später erneut.</p>
        {% endif %}
        
    </section>

